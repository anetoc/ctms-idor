# CTMS IDOR Backend Environment Variables
# Copy to .env and adjust values

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://ctms_user:ctms_password@localhost:5432/ctms_idor
DATABASE_SYNC_URL=postgresql://ctms_user:ctms_password@localhost:5432/ctms_idor

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production-at-least-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Ollama (LLM local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your-n8n-api-key

# Environment
ENVIRONMENT=development
DEBUG=true

# CORS (comma-separated list would require custom parsing, using defaults)
# CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
